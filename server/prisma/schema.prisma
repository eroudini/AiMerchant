generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  firstName     String
  lastName      String
  passwordHash  String
  emailVerified DateTime?
  createdAt     DateTime @default(now())
  products      Product[]
  alerts        Alert[]
  suggestions   PriceSuggestion[]
  forecastRuns  ForecastRun[]
  actionRecommendations ActionRecommendation[]
  actionLogs    ActionLog[]
}

model Product {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  sku         String
  title       String
  buyPrice    Float
  fees        Float
  price       Float
  stock       Int
  marketplace String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  alerts      Alert[]
  suggestions PriceSuggestion[]
  forecastRuns ForecastRun[]
  actionRecommendations ActionRecommendation[]
  actionLogs    ActionLog[]
}

model Alert {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  type      String
  message   String
  status    String   @default("open")
  createdAt DateTime @default(now())
  resolvedAt DateTime?
}

model PriceSuggestion {
  id             String   @id @default(cuid())
  user           User     @relation(fields: [userId], references: [id])
  userId         String
  product        Product  @relation(fields: [productId], references: [id])
  productId      String
  suggestedPrice Float
  inputsJson     Json
  createdAt      DateTime @default(now())
}

model ForecastRun {
  id         String   @id @default(cuid())
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
  product    Product? @relation(fields: [productId], references: [id])
  productId  String?
  country    String?
  channel    String?
  horizon    Int
  model      String
  status     String   @default("completed")
  metricsJson Json?
  createdAt  DateTime @default(now())
  results    ForecastResult[]
}

model ForecastResult {
  id        String       @id @default(cuid())
  run       ForecastRun  @relation(fields: [runId], references: [id])
  runId     String
  date      DateTime
  yhat      Float
  p10       Float?
  p90       Float?
  createdAt DateTime     @default(now())
  @@index([runId, date])
}

model ActionRecommendation {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  type      String   // 'po' | 'price'
  status    String   @default("draft") // 'draft' | 'approved' | 'executed' | 'cancelled'
  payload   Json
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActionLog {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  type      String
  payload   Json
  status    String?
  message   String?
  createdAt DateTime @default(now())
}
